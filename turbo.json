{
	"$schema": "https://turborepo.dev/schema.json",
	"tasks": {
		"build": {
			"outputs": ["dist/**"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"gen": {
			"outputs": ["src/**"]
		},
		"lint": {
			"outputs": ["dist/**"]
		},

		"dev": {
			"persistent": true,
			"cache": false
		},
		"storybook": {
			"persistent": true,
			"cache": false
		}
	}
}
